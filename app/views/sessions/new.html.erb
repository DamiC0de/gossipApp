<%= render 'layouts/header'%>
<body class="d-flex flex-column">
  <main class="flex-shrink-0">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
      <div class="container px-5">
        <a class="navbar-brand" href="<%= root_path %>"><span class="fw-bolder text-primary">Gossip</span></a>
        <%= render 'layouts/navbar'%>
      </div>
    </nav>
    <!-- Page content-->
    <section class="py-5">
      <div class="container px-5">
        <!-- Contact form-->
        
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
          <div class="text-center mb-5">
            <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
            <h1 class="fw-bolder">Login</h1>
            <p class="lead fw-normal text-muted mb-0">Get connected !</p>
          </div>
          <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
              <%= form_for :session, url: login_path do |f| %>
                <!-- Email input-->
                <div class="form-floating mb-3">
                  <%= f.email_field :email, class: 'form-control', id: 'email', placeholder: 'Enter your email...', required: true %>
                  <%= f.label :email %>
                  <div class="invalid-feedback">An email is required.</div>
                </div>
                <!-- Password input-->
                <div class="form-floating mb-3">
                  <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: 'Enter your password...', required: true %>
                  <%= f.label :password %>
                  <div class="invalid-feedback">A password is required.</div>
                          <% if flash[:alert] %>
        <p class="alert alert-danger"><%= flash[:alert] %></p>
        <% end %>
                </div>
                <!-- Submit Button-->
                <div class="d-grid"><%= f.submit "Submit", class: 'btn btn-primary btn-lg' %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
<%= render 'layouts/footer'%>
