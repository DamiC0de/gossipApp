<%= render 'layouts/header' %>

    <body class="d-flex flex-column h-100 bg-light">
        <main class="flex-shrink-0">
            <!-- Navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                <div class="container px-5">
                <a class="navbar-brand" href="<%= root_path %>"><span class="fw-bolder text-primary">Gossip</span></a>


                    <%= render 'layouts/navbar'%>

                </div>
            </nav>
            <!-- Page Content-->
            <div class="container px-5 my-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Bonjour <%= @user.name %></span></h1>
                </div>
                <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" value="<%= @user.name %>" readonly />
                        <label for="name">Nom</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" value="<%= @user.email %>" readonly />
                        <label for="email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" value="<%= @user.age %>" readonly />
                        <label for="email">Age</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="city" type="text" value="<%= @user.city %>" readonly />
                        <label for="city">Ville</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" value="<%= @user.description %>" readonly />
                        <label for="email">Description</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="password" type="password" value="<%= @user.password %>" readonly />
                        <label for="password">Mot de passe</label>
                    </div>
                    </form>

                    <% if current_user == @user %>
                        <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
                    <% end %>

                </div>

        </main>

<%= render 'layouts/footer' %>
