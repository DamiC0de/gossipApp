<%= render 'layouts/header'%>
<body class="d-flex flex-column">
    <main class="flex-shrink-0">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
            <a class="navbar-brand" href="<%= root_path %>"><span class="fw-bolder text-primary">Gossip</span></a>

                <%= render 'layouts/navbar'%>

            </div>
        </nav>
        <!-- Page content-->
        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-4 py-5 px-4 px-md-5">
                    <div class="text-center mb-5">
                        <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                        <h1 class="fw-bolder">Subscription</h1>
                        <p class="lead fw-normal text-muted mb-0">Join us !</p>
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-8 col-xl-6">
                            <%= form_with(model: @user, local: true) do |form| %>
                                <% if @user.errors.any? %>
                                    <div id="error_explanation">
                                        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                                        <ul>
                                        <% @user.errors.full_messages.each do |message| %>
                                            <li><%= message %></li>
                                        <% end %>
                                        </ul>
                                    </div>
                                <% end %>

                                <div class="form-floating mb-3">
                                    <%= form.text_field :name, class: "form-control", id: "name", placeholder: "Enter your name..." %>
                                    <%= form.label :name %>
                                </div>

                                <div class="form-floating mb-3">
                                    <%= form.email_field :email, class: "form-control", id: "email", placeholder: "name@example.com" %>
                                    <%= form.label :email, "Email address" %>
                                </div>

                                <div class="form-floating mb-3">
                                    <%= form.password_field :password, class: "form-control", id: "password", placeholder: "(123) 456-7890" %>
                                    <%= form.label :password %>
                                </div>

                                <div class="form-floating mb-3">
                                    <%= form.password_field :password_confirmation, class: "form-control", id: "password_confirmation", placeholder: "(123) 456-7890" %>
                                    <%= form.label :password_confirmation, "Password Confirmation" %>
                                </div>

                                <div class="d-grid">
                                    <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
<%= render 'layouts/footer'%>
